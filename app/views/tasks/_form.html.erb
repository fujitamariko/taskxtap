<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :種類 %>
    <%= form.text_field :assortment %>
  </div>

  <div class="field">
    <%= form.label :大分類 %>
    <%= form.text_field :major_category %>
  </div>

  <div class="field">
    <%= form.label :中分類 %>
    <%= form.text_field :medium_category %>
  </div>

  <div class="field">
    <%= form.label :小分類 %>
    <%= form.text_field :sub_category %>
  </div>

  <div class="field">
    <%= form.label :内容 %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :予定工数 %>
    <%= form.number_field :plan_hours, step: "0.01" %>
  </div>

  <div class="field">
    <%= form.label :実工数 %>
    <%= form.number_field :spend_hours, step: "0.01" %>
  </div>

  <div class="field">
    <%= form.label :締め切り %>
    <%= form.date_select :deadline_on %>
  </div>

  <div class="field">
    <%= form.label :ステータス %>
    <%= form.select :status, Task.statuses.keys.to_a, {}  %>
  </div>

  <div class="field">
    <%= form.label :ラベル %>
    <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
